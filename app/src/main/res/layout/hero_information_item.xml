<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/card_background"
    android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tvPrimaryAttr"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_for_icon"
            android:layout_marginLeft="@dimen/margin_for_icon"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvBaseHealth"
            android:layout_marginTop="@dimen/margin_for_icon"
            android:layout_marginLeft="@dimen/margin_for_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvPrimaryAttr"
            app:layout_constraintStart_toStartOf="parent"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvBaseMana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_for_icon"
            android:layout_marginLeft="@dimen/margin_for_icon"
            app:layout_constraintTop_toBottomOf="@+id/tvBaseHealth"
            app:layout_constraintStart_toStartOf="parent"
            android:text="TextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
